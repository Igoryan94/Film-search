<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatingDonutView">
        <attr name="progress" format="integer" />
        <attr name="stroke" format="float" />
    </declare-styleable>

    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:textAppearance">@style/MainMenuButtonTextStyle</item>
    </style>

    <style name="MainMenuButtonTextStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CardView">
        <item name="contentPadding">3dp</item>
        <item name="cardElevation">15dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@animator/state_list_button_elevation</item>
    </style>

    <style name="RoundButton" parent="BaseButton">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonTextShadow" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:shadowDy">5</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/backgroundColor</item>
    </style>

    <style name="RoundButton.SilverText">
        <item name="android:textColor">#C5C5C5</item>
    </style>

    <style name="RoundButton.SilverText.Bigger">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomYellowTextView" parent="Widget.AppCompat.TextView">
        <item name="android:padding">6dp</item>
    </style>

    <style name="TextViewYellowShadow" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorCat</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">@color/colorCat</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">7</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="BaseButton.AnimV2">
        <item name="android:stateListAnimator">@animator/state_list_button_elevation_simply_big
        </item>
    </style>

    <style name="MyDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@android:color/holo_red_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>