<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="MainMenuButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">?selectableItemBackgroundBorderless</item>
		<item name="android:textColor">@color/colorPrimaryDark</item>
	</style>

	<style name="CardView">
		<item name="contentPadding">3dp</item>
		<item name="cardElevation">15dp</item>
		<item name="cardCornerRadius">20dp</item>
	</style>

	<style name="RoundButton" parent="Widget.MaterialComponents.Button">
		<item name="cornerRadius">50dp</item>
		<item name="android:shadowDy">5</item>
		<item name="android:shadowDx">5</item>
		<item name="android:shadowRadius">5</item>
		<item name="android:shadowColor">@color/backgroundColor</item>
		<item name="backgroundTint">@color/colorPrimaryDark</item>
	</style>

	<style name="RoundButton.SilverText">
		<item name="android:textColor">#C5C5C5</item>
	</style>

	<style name="RoundButton.SilverText.Bigger">
		<item name="android:textSize">15sp</item>
	</style>

	<style name="CustomYellowTextView">
		<item name="android:padding">6dp</item>
		<item name="android:shadowColor">@color/colorCat</item>
		<item name="android:shadowDx">3</item>
		<item name="android:shadowDy">7</item>
		<item name="android:shadowRadius">5</item>
		<item name="android:textColor">@color/colorCat</item>
		<item name="android:textSize">15sp</item>
	</style>
</resources>